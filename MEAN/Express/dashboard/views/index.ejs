<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
  <link rel="stylesheet" href="/stylesheet.css">
  <title>Diver Database</title>
</head>
<body>
  <section>
    <div class="container p-3 my-3 bg-dark text-white">
      <h1>REGISTERED DIVERS!</h1>
      <br>
      <br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Skill Level</th>
            <th scope="col">Age</th>
            <th scope="col">Comments</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (var x in divers) {%>
          <tr>
            <td><%= divers[x].diverName %></td>
            <td><%= divers[x].diverLocation %></td>
            <td><%= divers[x].diverSkillLevel %></td>
            <td><%= divers[x].diverAge %></td>
            <td><%= divers[x].comment %></td>
            <td>
              <form action="/destroy/<%= divers[x]._id %>" method="get">
                <button type="button submit" class="btn btn-danger btn-sm">DELETE</button>
              </form>
            </td>
            <td>
              <form action="/edit/<%= divers[x]._id %>" method="get">
                <button type="button submit" class="btn btn-info btn-sm">EDIT</button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <br>
      <br>
      <form action="/divers/new" method='get'>
        <button type="button submit" class="btn btn-warning">ADD NEW DIVER</button>
      </form>
    </div>
</section>
  
</body>
</html>